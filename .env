# ==============================================
# AFFILIATE SYSTEM - ENVIRONMENT VARIABLES
# ==============================================

# Application Environment
NODE_ENV=development

# Port Configuration
BACKEND_PORT=3000
FRONTEND_PORT=3001

# ==============================================
# PostgreSQL Database
# ==============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_secure_password_change_me
POSTGRES_DB=affiliate_db

# Connection Settings
# Local: DB_HOST=127.0.0.1
# Docker: DB_HOST=postgres (docker-compose overrides this)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_SYNCRONIZE=false

# ==============================================
# Redis Configuration
# ==============================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password_change_me

# ==============================================
# JWT Authentication
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# ==============================================
# Application Settings
# ==============================================
MAX_AFFILIATE_LEVELS=10
COOKIE_TTL_DAYS=30

# ==============================================
# Frontend Environment Variables
# ==============================================
VITE_APP_DEFAULT_ROUTE=/dashboard/affiliate
VITE_APP_PUBLIC_PATH=/
VITE_APP_API_BASE_URL=http://localhost:3000/api
VITE_APP_ROUTER_MODE=frontend
